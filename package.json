{
  "name": "precommit-ng-lint",
  "version": "0.0.1",
  "description": "Executes ng lint on all staged files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "precommit-ng-lint": "dist/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "ng lint",
    "angular",
    "precommit",
    "husky",
    "lint-staged"
  ],
  "author": "abuob",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abuob/precommit-ng-lint"
  },
  "scripts": {
    "build": "tsc",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "prepublishOnly" : "npm test && npm run build"
  },
  "dependencies": {
    "find-parent-dir": "^0.3.0",
    "npm-which": "^3.0.1",
    "staged-git-files": "^1.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.0",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  }
}
